<header
  class="bg-dark text-light d-flex justify-content-between align-items-center py-4 px-2"
>
  <span class="logo bg-success text-light px-4 py-2">
    <a class="navbar-brand" href="/">Aingaran's TinyApp</a>
  </span>

  <ul class="nav">
    <li class="nav-item nav-link">
      <a href="/url/new" class="btn btn-warning mx-2">Create New URL</a>
    </li>
    <li class="nav-item nav-link">
      <a href="/urls" class="btn btn-warning mx-2">Show URLs</a>
    </li>

    <% if(!userId){ %>
    <li class="nav-item nav-link">
      <a href="/login" class="btn btn-danger mx-2">Login</a>
    </li>

    <li class="nav-item nav-link">
      <a href="/register" class="btn btn-info">Register</a>
    </li>
    <% } else{ %>
    <li class="nav-item nav-link">
      <a href="/logout" class="btn btn-danger">Logout</a>
    </li>
    <li class="nav-item nav-link">
      <span class="text-dark btn btn-info"> Logged in as <%- email %> </span>
    </li>

    <% } %>
  </ul>
</header>
